{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "lib": ["esnext", "dom", "DOM.Iterable", "ScriptHost"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@t/*": ["types/*"]
    },
    "plugins": [
      {
        "name": "@vuedx/typescript-vetur"
      }
    ],
    "types": [
      "node",
      "vite/client",
      "jest"
    ]
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue", "src/**/*.spec.ts", "./*.config.ts"],
  "exclude": ["node_modules"]
}
